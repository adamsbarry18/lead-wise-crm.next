{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":semanticPrefixFix",
    ":automergeMinor",
    ":automergePr",
    ":prHourlyLimit4",
    ":prConcurrentLimit10"
  ],
  "schedule": [
    "after 10pm every weekday",
    "every weekend",
    "before 5am every weekday"
  ],
  "timezone": "Europe/Paris",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "description": "Group React packages together",
      "groupName": "React packages",
      "groupSlug": "react",
      "matchPackageNames": ["/^react/", "/@types/react/"]
    },
    {
      "description": "Group Next.js packages",
      "groupName": "Next.js packages",
      "groupSlug": "nextjs",
      "matchPackageNames": ["/^next/"]
    },
    {
      "description": "Group Firebase packages",
      "groupName": "Firebase packages",
      "groupSlug": "firebase",
      "matchPackageNames": ["/^firebase/", "/@firebase/"]
    },
    {
      "description": "Group Radix UI packages",
      "groupName": "Radix UI packages",
      "groupSlug": "radix",
      "matchPackageNames": ["/^@radix-ui/"]
    },
    {
      "description": "Group testing packages",
      "groupName": "Testing packages",
      "groupSlug": "testing",
      "matchPackageNames": ["/jest/", "/testing-library/", "/cypress/"]
    },
    {
      "description": "Group TypeScript-related packages",
      "groupName": "TypeScript packages",
      "groupSlug": "typescript",
      "automerge": true,
      "matchPackageNames": ["/typescript/", "/@typescript-eslint/", "/@types//"]
    },
    {
      "description": "Group ESLint packages",
      "groupName": "ESLint packages",
      "groupSlug": "eslint",
      "matchPackageNames": ["/eslint/"]
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "description": "Disable updates for major versions of certain packages",
      "matchUpdateTypes": ["major"],
      "enabled": false,
      "matchPackageNames": ["/^@radix-ui/", "/^firebase/"]
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "assignees": ["@team-lead"]
  },
  "minimumReleaseAge": "3 days",
  "prCreation": "not-pending",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ“¦ Dependency Dashboard",
  "commitMessagePrefix": "chore(deps):",
  "commitBody": "Signed-off-by: Renovate Bot <bot@renovateapp.com>",
  "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{controls}}}{{{footer}}}",
  "rebaseWhen": "behind-base-branch",
  "reviewers": ["team-lead"],
  "assignees": ["team-lead"]
}
